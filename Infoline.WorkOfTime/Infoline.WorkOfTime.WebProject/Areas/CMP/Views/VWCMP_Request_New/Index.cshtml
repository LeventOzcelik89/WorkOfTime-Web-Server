@(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.VWCMP_Request_New>("VWCMP_Request_New")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWCMP_Request_New", new { area = "CMP" })).PageSize(25))
    .Columns(x =>
    {
        x.Bound(y => y.id).GridSelector(GridSelectorType.Checkbox);
        x.Bound(y => y.direction).Title("direction").Width(180);
        x.Bound(y => y.type).Title("type").Width(180);
        x.Bound(y => y.pid).Title("pid").Width(180);
        x.Bound(y => y.description).Title("description").Width(180);
        x.Bound(y => y.rowNumber).Title("rowNumber").Width(180);
        x.Bound(y => y.issueDate).Title("issueDate").Width(180).Format(Extensions.DateFormatShort(true));
        x.Bound(y => y.sendingDate).Title("sendingDate").Width(180).Format(Extensions.DateFormatShort(true));
        x.Bound(y => y.customerAdress).Title("customerAdress").Width(180);
        x.Bound(y => y.status).Title("status").Width(180);
        x.Bound(y => y.type_Title).Title("type_Title").Width(180);
        x.Bound(y => y.createdby_Title).Title("createdby_Title").Width(180);
        x.Bound(y => y.changedby_Title).Title("changedby_Title").Width(180);
        x.Bound(y => y.status_Title).Title("status_Title").Width(180);
        x.Bound(y => y.Customer_Title).Title("Customer_Title").Width(180);
        x.Bound(y => y.CustomerStorage_Title).Title("CustomerStorage_Title").Width(180);
        x.Bound(y => y.projectId_Title).Title("projectId_Title").Width(180);
    })
    .Selectable(x => x.Mode(GridSelectionMode.Multiple))
    .ToolBar(x =>
    {
        x.Custom().Text("Ekle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "always" }, { "data-method", "GET" } }).Url(Url.Action("Insert", "VWCMP_Request_New", new { area = "CMP" }));
        x.Custom().Text("Düzenle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "VWCMP_Request_New", new { area = "CMP" }));
        x.Custom().Text("Detay").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "VWCMP_Request_New", new { area = "CMP" }));
        x.Custom().Text("Sil").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWCMP_Request_New", new { area = "CMP" }));
    }))
