@model Infoline.WorkOfTime.BusinessData.VWCMP_CompanyCarKilometer
@{
    ViewBag.Title = "Araç Kilometre Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-horizontal" data-selector="modalContainer">
    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="Name">Giriş Tarihi</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.entryDate, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="Name">Kilometre</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.kilometer, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>

