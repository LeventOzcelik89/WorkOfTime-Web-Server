@{
    ViewBag.Title = "Stok Sayım İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
     <div class="col-md-2">
         <div class="ibox">
             <div class="ibox-content mailbox-content">
                 <div class="file-manager">
                     <a class="btn btn-block btn-success" data-task="Insert" data-href="/PRD/VWPRD_Stocktaking/Insert" data-modal="true" data-method="get">
                         <i class="fa fa-plus-circle"></i> Stok Sayım İşlemleri Oluştur
                     </a>
                 </div>
             </div>
         </div>
     </div>
     <div class="col-md-10">
         <div class="ibox">
             <div class="ibox-title">
                 <h5>Stok Sayım İşlemleri</h5>
                 <div class="ibox-tools">
                     <a class="collapse-link">
                         <i class="fa fa-chevron-up"></i>
                     </a>
                 </div>
             </div>
             <div class="ibox-content">
@(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.VWPRD_Stocktaking>("VWPRD_Stocktaking")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWPRD_Stocktaking", new { area = "PRD" })).PageSize(25))
    .Columns(x =>
    {

        x.Bound(y => y.code).Title("Sayım Kodu").Width(130);
        x.Bound(y => y.date).Title("Sayım Tarihi").Width(130).Format(Extensions.DateFormatShort(true));
        x.Bound(y => y.storageId_Title).Title("Depo id'si").Width(130);
        x.Bound(y => y.responsibleUserId_Title).Title("Sorumlu Personel Id'si").Width(130);
        x.Bound(y => y.description).Title("Açıklama").Width(130);
        x.Bound(y => y.status_Title).Title("İşlem Durumu").Width(130);
    })
    .Scrollable(x => x.Height(650))
    .Selectable(x => x.Mode(GridSelectionMode.Single))
    .ToolBar(x =>
    {
        x.Custom().Text("<i data-original-title='Stok Sayım İşlemleri Düzenle' class='fa fa-edit'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "VWPRD_Stocktaking", new { area = "PRD" }));
        x.Custom().Text("<i data-original-title='Stok Sayım İşlemleri Detayı' class='fa fa-info-circle'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "VWPRD_Stocktaking", new { area = "PRD" }));
        x.Custom().Text("<i data-original-title='Stok Sayım İşlemleri Sil' class='fa fa-trash'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWPRD_Stocktaking", new { area = "PRD" }));
    }))
             </div>
         </div>
     </div>
</div>
