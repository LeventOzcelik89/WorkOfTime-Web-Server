@{
	ViewBag.Title = "Stok Sayım İşlemleri";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
	<div class="col-md-12">
		<div class="ibox">
			<div class="ibox-title">
				<h5>Sayım İşlemi Listesi</h5>
				<div class="ibox-tools">
					<a class="collapse-link">
						<i class="fa fa-chevron-up"></i>
					</a>
				</div>
			</div>
			<div class="ibox-content">
				@(Html.Akilli()
	.Grid<Infoline.WorkOfTime.BusinessData.VWPRD_Stocktaking>("VWPRD_Stocktaking")
	.DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWPRD_Stocktaking", new { area = "PRD" })).PageSize(25))
	.Columns(x =>
	{

		x.Bound(y => y.code).Title("Sayım Kodu").Width(130);
		x.Bound(y => y.storageId_Title).Title("Sayım Yapılan Depo").Width(130);
		x.Bound(y => y.responsibleUserId_Title).Title("Sayım Yapan Personel").Width(130);
		x.Bound(y => y.description).Title("Açıklama").Width(130);
		x.Bound(y => y.status_Title).Title("İşlem Durumu").Width(130);
		x.Bound(y => y.date).Title("Oluşturma Tarihi").Width(130).Format(Extensions.DateFormatShort(true));
	})
	.Scrollable(x => x.Height(650))
	.Selectable(x => x.Mode(GridSelectionMode.Single))
	.ToolBar(x =>
	{
		x.Custom().Text("<i data-original-title='Stok Sayım İşlemleri Detayı' class='fa fa-info-circle'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "VWPRD_Stocktaking", new { area = "PRD" }));
		x.Custom().Text("<i data-original-title='Stok Sayım İşlemleri Sil' class='fa fa-trash'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWPRD_Stocktaking", new { area = "PRD" }));
	}))
			</div>
		</div>
	</div>
</div>
