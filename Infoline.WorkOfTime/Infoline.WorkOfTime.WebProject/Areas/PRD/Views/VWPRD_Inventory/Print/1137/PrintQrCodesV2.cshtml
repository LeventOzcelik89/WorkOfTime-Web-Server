<body lang="tr-TR" link="#000080" vlink="#800000" dir="ltr">
    <table width="709" cellpadding="1" cellspacing="0" style="page-break-before: always">
        @{
            var arr = Model.OrderBy(c => c.serialcode).ToArray();
        }
        @for (int n = 0; n < Model.Count(); n++)
        {
            <tr valign="top">
                <td width="235" height="123" style="border-top: 1px solid #ffffff; border-bottom: 1px solid #ffffff; border-left: 1px solid #ffffff; border-right: 1px solid #ffffff; padding: 0in 0.01in">
