                        <div style="font-family:Calibri;">
                            <div>
                                @(Html.Kendo().QRCode().Name("qrCode_" + n).Value(arr[n].code).Size(65))
                            </div>
                            <img class="log" src="@TenantConfig.Tenant.Logo" />
                            @if (isLogo == 1)
                            {
                                <div class="qrcode-text" style="">@arr[n].productId_Title.Split('|')[0] @arr[n].fullName</div>
                            }
                            else
                            {
                                <div class="qrcode-text" style="">@Html.Raw(arr[n].code + " | " + arr[n].serialcode)</div>
                            }
                        </div>
                    </p>
                </td>
                <td width="2" style="border-top: 1px solid #ffffff; border-bottom: 1px solid #ffffff; border-left: 1px solid #ffffff; border-right: 1px solid #ffffff; padding: 0in 0.01in">
                    <p style="margin-left: 0.06in; margin-right: 0.06in">
                        <br />
                        @{ if ((n + 1) >= Model.Count())
                            {
