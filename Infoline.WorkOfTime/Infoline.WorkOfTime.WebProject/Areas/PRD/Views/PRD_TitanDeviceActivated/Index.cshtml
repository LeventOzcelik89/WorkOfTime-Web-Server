@(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.PRD_TitanDeviceActivated>("PRD_TitanDeviceActivated")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "PRD_TitanDeviceActivated", new { area = "PRD" })).PageSize(25))
    .Columns(x =>
    {
        x.Bound(y => y.id).GridSelector(GridSelectorType.Checkbox);
        x.Bound(y => y.SerialNumber).Title("SerialNumber").Width(180);
        x.Bound(y => y.IMEI1).Title("IMEI1").Width(180);
        x.Bound(y => y.IMEI2).Title("IMEI2").Width(180);
        x.Bound(y => y.CreatedOfTitan).Title("CreatedOfTitan").Width(180).Format(Extensions.DateFormatShort(true));
    })
    .Selectable(x => x.Mode(GridSelectionMode.Multiple))
    .ToolBar(x =>
    {
        x.Custom().Text("Ekle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "always" }, { "data-method", "GET" } }).Url(Url.Action("Insert", "PRD_TitanDeviceActivated", new { area = "PRD" }));
        x.Custom().Text("Düzenle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "PRD_TitanDeviceActivated", new { area = "PRD" }));
        x.Custom().Text("Detay").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "PRD_TitanDeviceActivated", new { area = "PRD" }));
        x.Custom().Text("Sil").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "PRD_TitanDeviceActivated", new { area = "PRD" }));
    }))
