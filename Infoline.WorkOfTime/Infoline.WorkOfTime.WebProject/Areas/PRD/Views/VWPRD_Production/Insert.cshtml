            <div class="form-group">
                <div class="col-md-5">
                    <label class="control-label label-md" for="productionOrderDate">Üretim Emir Tarihi</label>
                </div>
                <div class="col-md-7">
                    @(
        Html.Akilli().
        DateTimePickerFor(model => model.productionOrderDate).
        Format(Extensions.DateFormatFull()).
        Value(DateTime.Now)
        
