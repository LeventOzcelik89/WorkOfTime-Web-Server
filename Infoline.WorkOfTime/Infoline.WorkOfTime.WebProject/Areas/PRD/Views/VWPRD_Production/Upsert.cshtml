@using (Html.BeginForm("Upsert", "VWPRD_Transaction", FormMethod.Post, new Dictionary<string, object>() {
    { "class", "form-horizontal" },
    { "role", "form" },
    { "data-selector", "modalContainer" },
    { "id","VWPRD_ProductionUpsertOperationForm"},
    { "data-formType", "Ajax" }
}))
