@(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.VWPRD_ProductPayment>("VWPRD_ProductPayment")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWPRD_ProductPayment", new { area = "PRD" })).PageSize(25))
    .Columns(x =>
    {
        x.Bound(y => y.id).GridSelector(GridSelectorType.Checkbox);
        x.Bound(y => y.unitPrice).Title("unitPrice").Width(180);
        x.Bound(y => y.totalPrice).Title("totalPrice").Width(180);
        x.Bound(y => y.count).Title("count").Width(180);
        x.Bound(y => y.date).Title("date").Width(180).Format(Extensions.DateFormatShort(true));
        x.Bound(y => y.createdby_Title).Title("createdby_Title").Width(180);
        x.Bound(y => y.changedby_Title).Title("changedby_Title").Width(180);
        x.Bound(y => y.companyId_Title).Title("companyId_Title").Width(180);
    })
    .Selectable(x => x.Mode(GridSelectionMode.Multiple))
    .ToolBar(x =>
    {
        x.Custom().Text("Ekle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "always" }, { "data-method", "GET" } }).Url(Url.Action("Insert", "VWPRD_ProductPayment", new { area = "PRD" }));
        x.Custom().Text("Düzenle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "VWPRD_ProductPayment", new { area = "PRD" }));
        x.Custom().Text("Detay").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "VWPRD_ProductPayment", new { area = "PRD" }));
        x.Custom().Text("Sil").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWPRD_ProductPayment", new { area = "PRD" }));
    }))
