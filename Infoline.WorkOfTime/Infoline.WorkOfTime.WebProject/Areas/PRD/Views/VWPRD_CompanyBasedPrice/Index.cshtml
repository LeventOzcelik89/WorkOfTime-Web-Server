@{
    ViewBag.Title = "Müşteri Bazlı Fiyat Belirleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="ibox">
    <div class="ibox-title">
        <h5>Müşteri Bazlı Fiyat Listesi</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">
        @(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.VWPRD_CompanyBasedPrice>("VWPRD_CompanyBasedPrice")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWPRD_CompanyBasedPrice", new { area = "PRD" })).PageSize(25))
    .Columns(x =>
    {
        x.Bound(y => y.companyId_Title).Title("Müşteri").Width(180);
        x.Bound(y => y.categoryId_Title).Title("Kategori").Width(180);
        x.Bound(y => y.productId_Title).Title("Ürün").Width(180);
        x.Bound(y => y.conditionType).Title("Koşul Türü").Width(180);
        x.Bound(y => y.sellingType).Title("Satış Tipi").Width(180);
    })
    .Selectable(x => x.Mode(GridSelectionMode.Multiple))
    .ToolBar(x =>
    {
        x.Custom().Text("<i class='fa fa-plus-circle' data-original-title='Özel Fiyat Girişi Yap'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "always" }, { "data-method", "GET" },{"data-blank","" },{"data-modal","false" } }).Url(Url.Action("Insert", "VWPRD_CompanyBasedPriceDetail", new { area = "PRD" }));
        x.Custom().Text("<i class='fa fa-info-circle' data-original-title='Kayıtları Görüntüle'</i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "VWPRD_CompanyBasedPrice", new { area = "PRD" }));
        x.Custom().Text("<i class='fa fa-trash' data-original-title='Kaydı Sil'</i>").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWPRD_CompanyBasedPrice", new { area = "PRD" }));
    }))

    </div>
</div>