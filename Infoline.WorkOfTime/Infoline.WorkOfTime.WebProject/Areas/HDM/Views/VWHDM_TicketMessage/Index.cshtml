@{
    ViewBag.Title = "Yardım Talebi Üzerinde Yazılan Mesajlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-2">
        <div class="ibox">
            <div class="ibox-content mailbox-content">
                <div class="file-manager">
                    <a class="btn btn-block btn-success">asdasdasd</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-10">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Yardım Talepleri</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                @(Html.Akilli()
                    .Grid<Infoline.WorkOfTime.BusinessData.VWHDM_TicketMessage>("VWHDM_TicketMessage")
                    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWHDM_TicketMessage", new { area = "HDM" })).PageSize(25))
                    .Columns(x =>
                    {
                        x.Bound(y => y.ticketId_Title).Title("Talebin Id'si").Width(130);
                        x.Bound(y => y.type).Title("Mesaj Tipi").Width(130);
                        x.Bound(y => y.content).Title("İçerik").Width(130);
                        x.Bound(y => y.cc).Title("Mail CC").Width(130);
                        x.Bound(y => y.bcc).Title("Mail BCC").Width(130);
                    })
                    .Scrollable(x => x.Height(650))
                    .Selectable(x => x.Mode(GridSelectionMode.Single))
                    .ToolBar(x =>
                    {
                        x.Custom().Text("<i data-original-title='Yardım Talebi Üzerinde Yazılan Mesajlar Düzenle' class='fa fa-edit'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "VWHDM_TicketMessage", new { area = "HDM" }));
                        x.Custom().Text("<i data-original-title='Yardım Talebi Üzerinde Yazılan Mesajlar Detayı' class='fa fa-info-circle'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "VWHDM_TicketMessage", new { area = "HDM" }));
                        x.Custom().Text("<i data-original-title='Yardım Talebi Üzerinde Yazılan Mesajlar Sil' class='fa fa-trash'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWHDM_TicketMessage", new { area = "HDM" }));
                    }))
            </div>
        </div>
    </div>
</div>
