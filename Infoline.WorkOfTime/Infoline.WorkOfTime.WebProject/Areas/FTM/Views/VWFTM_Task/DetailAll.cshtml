@model VMFTM_TaskModel
@{
    ViewBag.Title = Model.code + " Kodlu Görev Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userStatus = (PageSecurity)Session["userStatus"];
    var enumProperties = Infoline.Helper.EnumsProperties.EnumToArrayGeneric<EnumFTM_TaskOperationStatus>().ToArray();
    var step1 = Model.taskOperations.Where(a => a.status == (int)EnumFTM_TaskOperationStatus.GorevOlusturuldu || a.status == (int)EnumFTM_TaskOperationStatus.GorevOlusturulduMusteri || a.status == (int)EnumFTM_TaskOperationStatus.GorevOlusturulduSistem).OrderByDescending(a => a.created).Select(a => string.Format("İŞLEM YAPAN : {0}   <br/>  İŞLEM TARİHİ : {1:dd.MM.yyyy HH:mm}", a.createdby_Title, a.created)).FirstOrDefault();
    var step2 = Model.taskOperations.Where(a => a.status >= (int)EnumFTM_TaskOperationStatus.PersonelAtamaYapildi).OrderBy(a => a.created).Select(a => string.Format("İŞLEM YAPAN : {0}   <br/>  İŞLEM TARİHİ : {1:dd.MM.yyyy HH:mm} <br/> GEÇEN SÜRE : {2}", a.createdby_Title, a.created, a.passingTime)).FirstOrDefault();
    var step3 = Model.taskOperations.Where(a => a.status == (int)EnumFTM_TaskOperationStatus.GorevUstlenildi).OrderByDescending(a => a.created).Select(a => string.Format("İŞLEM YAPAN : {0}   <br/>  İŞLEM TARİHİ : {1:dd.MM.yyyy HH:mm} <br/> GEÇEN SÜRE : {2}", a.createdby_Title, a.created, a.passingTime)).FirstOrDefault();
    var step4 = Model.taskOperations.Where(a => a.status > (int)EnumFTM_TaskOperationStatus.GorevUstlenildi).OrderByDescending(a => a.created).Select(a => string.Format("İŞLEM YAPAN : {0}   <br/>  İŞLEM TARİHİ : {1:dd.MM.yyyy HH:mm} <br/> GEÇEN SÜRE : {2}", a.createdby_Title, a.created, a.passingTime)).FirstOrDefault();
    var step5 = Model.taskOperations.Where(a => a.status == (int)EnumFTM_TaskOperationStatus.CozumBildirildi).OrderByDescending(a => a.created).Select(a => string.Format("İŞLEM YAPAN : {0}   <br/>  İŞLEM TARİHİ : {1:dd.MM.yyyy HH:mm} <br/> GEÇEN SÜRE : {2}", a.createdby_Title, a.created, a.passingTime)).FirstOrDefault();
    var step6 = Model.taskOperations.Where(a => a.status == (int)EnumFTM_TaskOperationStatus.CozumOnaylandi).OrderByDescending(a => a.created).Select(a => string.Format("İŞLEM YAPAN : {0}   <br/>  İŞLEM TARİHİ : {1:dd.MM.yyyy HH:mm} <br/> GEÇEN SÜRE : {2}", a.createdby_Title, a.created, a.passingTime)).FirstOrDefault();
}

<link href="~/Content/Custom/MyPage/css/General.css" rel="stylesheet" />
<link href="css/plugins/blueimp/css/blueimp-gallery.min.css" rel="stylesheet">
<script src="js/plugins/blueimp/jquery.blueimp-gallery.min.js"></script>

<script type="text/javascript">
    function ImageErrorData(element, image, id) {
        element.onerror = '';
        element.src = image;
        element.height = 500;
        $('.removeImage' + id + '').removeAttr("href");
        $(element).css({ "margin": "5%", "margin-left": "25%" });

    }
</script>

<div id="detailTask">
    <div class="clearfix animated slideInRight" style="padding: 25px 30px 5px 30px;border: 1px solid rgba(202, 201, 201, 0.4);background: #fff;margin-bottom: 10px;">
        <div class="main-timeline2">

            <div class="timeline2 green2">
                <a href="#" class="timeline-content2" data-toggle="tooltip" data-html="true" data-placement="top" data-original-title="@step1)">
                    <div class="timeline-yeargreen">
                        <span class="fa fa-bookmark fa-2x"></span>
                    </div>
                    <div class="inner-content2">
                        <h3 class="title2">Görev Oluşturuldu</h3>
                    </div>
                </a>
            </div>
            <div class="timeline2 @(step2 != null ? "green2" : "")">
                <a href="#" class="timeline-content2" data-toggle="tooltip" data-placement="top" data-html="true" data-original-title="@(step2 != null ? step2 : "Personel Henüz Üstlenilmedi.")">
                    <div class="@(step2 != null ? "timeline-yeargreen" : "timeline-year2")">
                        <span class="fa fa-users fa-2x"></span>
                    </div>
                    <div class="inner-content2">
                        <h3 class="title2">Personel Atandı</h3>
                    </div>
                </a>
            </div>
            <div class="timeline2 @(step3 != null ? "green2" : "")">
                <a href="#" class="timeline-content2" data-toggle="tooltip" data-placement="top" data-html="true" data-original-title="@(step3 != null ? step3 : "Görev Henüz Üstlenilmedi.")">
                    <div class="@(step3 != null ? "timeline-yeargreen" : "timeline-year2")">
                        <span class="fa fa-user-secret fa-2x"></span>
                    </div>
                    <div class="inner-content2">
                        <h3 class="title2">Görev Üstlenildi</h3>
                    </div>
                </a>
            </div>
            <div class="timeline2 @(step4 != null ? "green2" : "")">
                <a href="#" class="timeline-content2" data-toggle="tooltip" data-placement="top" data-html="true" data-original-title="@(step4 != null ? step4 : "Henüz İşlem Yapılmadı.")">
                    <div class="@(step4 != null ? "timeline-yeargreen" : "timeline-year2")">
                        <span class="@(Model.lastOperationStatus == (Int32)EnumFTM_TaskOperationStatus.GorevDurduruldu ? "fa fa-pause" : "fa fa-cogs")"></span>
                    </div>
                    <div class="inner-content2">
                        <h3 class="title2">@(Model.lastOperationStatus == (Int32)EnumFTM_TaskOperationStatus.GorevDurduruldu ? "Görev Durduruldu": "İşlem Yapılıyor") </h3>
                    </div>
                </a>
            </div>
            <div class="timeline2 @(step5 != null ? "green2" : "")">
                <a href="#" class="timeline-content2" data-toggle="tooltip" data-placement="top" data-html="true" data-original-title="@(step5 != null ? step5 : "Henüz İşlem Yapılmadı.")">
                    <div class="@(step5 != null ? "timeline-yeargreen" : "timeline-year2")">
                        <span class="fa fa-bell fa-2x"></span>
                    </div>
                    <div class="inner-content2">
                        <h3 class="title2">Çözüm Bildirildi</h3>
                    </div>
                </a>
            </div>
            <div class="timeline2 @(step6 != null ? "green2" : "")">
                <a href="#" class="timeline-content2" data-toggle="tooltip" data-placement="top" data-html="true" data-original-title="@(step6 != null ? step6 : "Henüz İşlem Yapılmadı.")">
                    <div class="@(step6 != null ? "timeline-yeargreen" : "timeline-year2")">
                        <span class="fa fa-check-circle fa-2x"></span>
                    </div>
                    <div class="inner-content2">
                        <h3 class="title2"> Çözüm Onaylandı </h3>
                    </div>
                </a>
            </div>

        </div>
    </div>
    <div class="wrapper wrapper-content  animated slideInRight">
        <div class="row">
            <div class="col-lg-8">
                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <li class="active" data-toggle="tooltip" data-placement="top" title="Görev Detayları">
                            <a data-toggle="tab" href="#gorevdetay" aria-expanded="true"><i class="icon-spread text-success"></i></a>
                        </li>

                        <li data-toggle="tooltip" data-placement="top" title="Operasyon Fotoğrafları">
                            <a data-toggle="tab" href="#fotolar" aria-expanded="false"><i class="icon-picture text-success" aria-hidden="true"></i></a>
                        </li>

                        <li data-toggle="tooltip" data-placement="top" title="Görev Masrafları">
                            <a data-toggle="tab" href="#masrafgirisi" aria-expanded="false"><i class="icon-money text-success" aria-hidden="true"></i></a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane active" id="gorevdetay">
                            <div class="ibox">

                                @Html.Partial("~/Areas/FTM/Views/VWFTM_Task/_Partial_VWFTM_Task_Detail.cshtml", Model)

                                <div class="ibox-content clearfix">
                                    <div class="harita" id="Harita"></div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane" id="fotolar">
                            <div class="ibox">
                                <div class="ibox-title">
                                    <h5>Operasyon Fotoğrafları</h5> &nbsp;
                                </div>
                                <div class="ibox-content" style="padding:25px;height:600px;">

                                    @if (Model.files.Where(asd => asd.Contains(".png") || asd.Contains(".jpeg") || asd.Contains("jpg")).Count() > 0)
                                    {

                                        <div class="carousel slide" id="carousel2">
                                            <ol class="carousel-indicators">
                                                @for (int j = 0; j < Model.files.Where(asd => asd.Contains(".png") || asd.Contains(".jpeg") || asd.Contains("jpg")).Count(); j++)
                                                {
                                                    <li data-slide-to="@j" data-target="#carousel2" class="@(j == 0 ? "active" : "")"></li>
                                                }
                                            </ol>
                                            <div class="carousel-inner" style="height:550px;">
                                                @{
                                                    int i = 0;
                                                    foreach (var item in Model.files.Where(asd => asd.Contains(".png") || asd.Contains(".jpeg") || asd.Contains("jpg")))
                                                    {
                                                        <div class="item @(i == 0 ? "active" : "")">
                                                            <a href="@item" class="removeImage@(i)" target="_blank">
                                                                <img alt="image" class="img-responsive" onerror="ImageErrorData(this, '/Content/Custom/img/404error.png',@i)" src="@item" style="display: block; margin:auto;width:50%;">
                                                            </a>
                                                        </div>
                                                        @(i= i + 1)
                                                    }
                                                }
                                            </div>
                                            <a data-slide="prev" href="#carousel2" class="left carousel-control">
                                                <span class="icon-prev"></span>
                                            </a>
                                            <a data-slide="next" href="#carousel2" class="right carousel-control">
                                                <span class="icon-next"></span>
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning text-center m-t-sm m-b-sm" style="animation: hello 1.5s ease-in-out infinite;text-align: center;padding:10px;">
                                            Göreve ait operasyon fotoğrafı bulunamadı.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane" id="masrafgirisi">
                            <div class="ibox">
                                <div class="ibox-title">
                                    <h5>Görev Masrafları</h5> &nbsp;
                                </div>
                                <div class="ibox-content" style="padding:25px;height:600px;">
                                    @(Html.Akilli()
					.Grid<Infoline.WorkOfTime.BusinessData.VWPA_Transaction>("VWPA_Transaction")
					.DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWPA_Transaction", new { area = "PA" })).Filter(a => a.type == (int)EnumPA_TransactionType.Masraf && a.dataTable == "FTM_Task" && a.dataId == Model.id).PageSize(25))
					.Columns(x =>
					{
						x.Bound(y => y.id).GridSelector(GridSelectorType.Checkbox).ClientTemplate("#=TemplateEngine('VWPA_TransactionExpenseTask',data)#");
						x.Bound(y => y.invoiceId_Title).Title("İlişkili Fatura").Hidden(true).Width(130);
						x.Bound(y => y.accountId_Title).Title("İlişkili Hesap").Hidden(true).Width(130);
						x.Bound(y => y.direction_Title).Title("İşlem Yönü").Hidden(true).Width(130);
						x.Bound(y => y.type_Title).Title("İşlem Tipi").Hidden(true).Width(130);
						x.Bound(y => y.amount).Title("Miktar").Hidden(true).Width(130);
						x.Bound(y => y.currencyId_Title).Title("Para Birimi").Hidden(true).Width(130);
						x.Bound(y => y.date).Title("Planlanan Ödeme Tarihi").Hidden(true).Width(130).Format(Extensions.DateFormatShort(true));
						x.Bound(y => y.description).Title("Açıklama").Hidden(true).Width(130);
					})
					.Selectable(x => x.Mode(GridSelectionMode.Single))
					.Scrollable(s => s.Height(400))
					.ToolBar(x =>
					{
						//x.Custom().Text("<i data-original-title='Gider Düzenle' class='fa fa-edit'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" }, { "data-id", "update" } }).Url(Url.Action("UpdateExpense", "VWPA_Transaction", new { area = "PA" }));
						x.Custom().Text("<i data-original-title='Gider Detayı' class='fa fa-info-circle'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" }, { "data-id", "detail" } }).Url(Url.Action("DetailExpense", "VWPA_Transaction", new { area = "PA" }));

						x.Custom().Text("<i data-original-title='Gideri Sil' class='fa fa-trash'></i>").HtmlAttributes(new Dictionary<string, object>() {
							{ "data-ask", "Ödeme planı silinirse, daha önce ödeme yapılmışsa onlar da silinecektir. Devam etmek istediğinizden emin misiniz?" }
						}).Url(Url.Action("Delete", "VWPA_Transaction", new { area = "PA" }));
					})
                )
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <div class="col-lg-4">
                <div class="ibox">
                    <div class="ibox-title">
                        <ul class="dots clearfix" style="margin: 0px;padding: 10px;overflow:hidden;display:-webkit-inline-box;width:100%;">
                            <li style="width: 25%;">
                                <a>
                                    <span style="background-color:#7ce47f;color:white;" data-selector="taskSelect" data-type="@((int)EnumFTM_TaskOperationStatus.IslakImzaliFormYuklendi)" class="fa fa-upload active@((int)EnumFTM_TaskOperationStatus.IslakImzaliFormYuklendi)" data-toggle="tooltip" data-placement="top" title="Saha Operasyon Görev Form Sayısı">
                                        <mark data-mark="@((int)EnumFTM_TaskOperationStatus.IslakImzaliFormYuklendi)" style="background-color:#7ce47f" class="green active@((int)EnumFTM_TaskOperationStatus.IslakImzaliFormYuklendi)">@Model.taskOperations.Where(x => x.status == (int)EnumFTM_TaskOperationStatus.IslakImzaliFormYuklendi).Count()</mark>
                                    </span>
                                </a>
                            </li>
                            <li style="width: 25%;">
                                <a>
                                    <span class="fa fa-qrcode active@((int)EnumFTM_TaskOperationStatus.GorevIslemYapiliyorAnaUrun)" data-selector="taskSelect" style="background-color:#8e8b8b; color:white;" data-type="@((int)EnumFTM_TaskOperationStatus.GorevIslemYapiliyorAnaUrun)" data-toggle="tooltip" data-placement="top" title="İşlem Sayısı">
                                        <mark data-mark="@((int)EnumFTM_TaskOperationStatus.GorevIslemYapiliyorAnaUrun)" style="background-color:#8e8b8b" class="green active@((int)EnumFTM_TaskOperationStatus.GorevIslemYapiliyorAnaUrun)">@Model.taskOperations.Where(x => x.status == 20 || x.status == 21).Count()</mark>
                                    </span>
                                </a>
                            </li>
                            <li style="width: 25%;">
                                <a>
                                    <span class="fa fa-file-text active@((int)EnumFTM_TaskOperationStatus.GorevFormuDoldurulduAnaUrun)" style="background-color:#e2c47f;color:white;" data-toggle="tooltip" data-placement="top" data-selector="taskSelect" data-type="@((int)EnumFTM_TaskOperationStatus.GorevFormuDoldurulduAnaUrun)" title="Doldurulan Görev Form Sayısı">
                                        <mark data-mark="@((int)EnumFTM_TaskOperationStatus.GorevFormuDoldurulduAnaUrun)" style="background-color:#e2c47f" class="green active@((int)EnumFTM_TaskOperationStatus.GorevFormuDoldurulduAnaUrun)">@Model.taskOperations.Where(x => x.status == 22 || x.status == 23).Count()</mark>
                                    </span>
                                </a>
                            </li>
                            <li style="width: 25%;">
                                <a>
                                    <span class="fa fa-image active@((int)EnumFTM_TaskOperationStatus.GorevDosyaIslemiAnaUrun)" style="background-color:#97c1d0;color:white;" data-toggle="tooltip" data-placement="top" data-selector="taskSelect" data-type="@((int)EnumFTM_TaskOperationStatus.GorevDosyaIslemiAnaUrun)" title="Dosya(Resim) Sayısı">
                                        <mark data-mark="@((int)EnumFTM_TaskOperationStatus.GorevDosyaIslemiAnaUrun)" style="background-color:#97c1d0" class="green active@((int)EnumFTM_TaskOperationStatus.GorevDosyaIslemiAnaUrun)">@Model.taskOperations.Where(x => x.status == 25 || x.status == 24).Count()</mark>
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="ibox">
                    <div class="ibox-title">
                        <span class="text-muted small pull-right">
                            <a class="btn btn-xs btn-info" data-href="@Url.Action("Print", "VWFTM_Task", new { area = "FTM", id = Model.id })" data-original-title="Görev Formu Yazdır"
                               data-modal="false" data-task="Insert" data-method="GET" data-blank="true" data-show="single">
                                <i class="fa fa-print"></i> Yazdır
                            </a>
                            <button class="btn btn-xs btn-success" data-selector="share" data-formUrl="@Url.Action("Print", "VWFTM_Task", new { area = "FTM", id = Model.id })" data-formElemId="operationForm" data-hastemplate="true"
                                    data-formMessage="Görev formu ekte sunulmuştur." data-formEmail="" data-formSubject="Görev Formu"
                                    data-original-title="Görev Formunu Paylaş">
                                <i class="fa fa-send"></i> Paylaş
                            </button>
                        </span>
                        <h5>Görev Operasyon Geçmişi</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="tab-content" style="max-height: 760px;overflow: scroll;">

                            <div class="client-detail">

                                <div id="vertical-timeline" class="vertical-container dark-timeline">

                                    @foreach (var item in Model.taskOperations)
                                    {
                                        var statusEnum = enumProperties.Where(a => Convert.ToInt32(a.Key) == item.status.Value).FirstOrDefault();

                                        <div class="vertical-timeline-block" data-select="@item.status">
                                            <div class="vertical-timeline-icon" style="background-color:#@statusEnum.Generic["color"];color: white;">
                                                <i class="@statusEnum.Generic["icon"]"></i>
                                            </div>
                                            <div class="vertical-timeline-content">
                                                <p class="clearfix ">
                                                    <strong class="pull-left"> @item.status_Title</strong>
                                                    <small style="font-size:9px;padding-top:2px;" class="pull-right"> @string.Format("{0:dd.MM.yyyy HH:mm}", item.created)</small>
                                                </p>
                                                <div class="small text-muted m-t-sm"> İşlem Yapan :  @item.createdby_Title </div>
                                                <div class="small text-muted"> Geçen Süre : @item.passingTime </div>
                                                <div class="small text-muted"> Görev Konumuna Uzaklık : @(item.distance.HasValue ? item.distance.Value.ToString("N2") + " km" : "Konum bulunamadı")</div>
                                                @if (item.battery != null)
                                                {<div class="small text-muted">Batarya Durumu : <i class="@(item.battery.Value > 69 ? "icon-battery-3 text-primary" : item.battery.Value > 29 ? "icon-battery-2 text-warning" :"icon-battery-1 text-danger")"></i> &nbsp;   <strong>@item.battery %</strong></div>}
                                                @if (item.fixture_Title != null)
                                                {<div class="small text-muted"> Envanter : @item.fixture_Title </div>}
                                                @if (item.description != null)
                                                {<div class="small text-muted"> Açıklama : @item.description </div>}

                                                <div class="btnns m-t-xs">

                                                    <a data-original-title="Detay" class="btn btn-xs btn-warning m-l-xs" data-href="@Url.Action("Detail", "VWFTM_TaskOperation", new { area = "FTM", id = item.id })" data-task="Insert" data-method="GET" data-modal="true" data-show="single"><i class="fa fa-eye"></i></a>
                                                    @if (item.status > (int)EnumFTM_TaskOperationStatus.GorevUstlenildi)
                                                    {
                                                        if (item.status != (int)EnumFTM_TaskOperationStatus.GorevDurduruldu)
                                                        {
                                                            if (item.status != (int)EnumFTM_TaskOperationStatus.GorevYenidenBaslatildi)
                                                            {
                                                                <a class="btn btn-xs btn-primary m-l-xs" data-original-title="Düzenle" data-href="@Url.Action("Update", "VWFTM_TaskOperation", new { area = "FTM", id = item.id })" data-task="Insert" data-method="GET" data-modal="true" data-show="single"><i class="fa fa-edit"></i></a>
                                                            }
                                                        }
                                                    }

                                                    @if (item.status == (int)EnumFTM_TaskOperationStatus.GorevFormuDoldurulduAltUrun || item.status == (int)EnumFTM_TaskOperationStatus.GorevFormuDoldurulduAnaUrun)
                                                    {
                                                        <a class="btn btn-xs btn-info  m-l-xs" data-href="@Url.Action("Print", "VWFTM_TaskOperation", new { area = "FTM", id = Model.id,operationId = item.id })" data-original-title="Yazdır"
                                                           data-modal="false" data-task="Insert" data-method="GET" data-blank="true" data-show="single">
                                                            <i class="fa fa-print"></i>
                                                        </a>
                                                        <a class="btn btn-xs btn-success m-l-xs" data-selector="share" data-formUrl="@Url.Action("Print", "VWFTM_TaskOperation", new { area = "FTM", id = Model.id,operationId = item.id })" data-formElemId="operationForm" data-hastemplate="true"
                                                           data-formMessage="Görev Operasyon Formu Ektedir." data-formEmail="" data-formSubject="Görev Operasyon Formu"
                                                           data-original-title="Paylaş">
                                                            <i class="fa fa-send"></i>
                                                        </a>

                                                    }


                                                </div>

                                            </div>
                                        </div>
                                    }
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="fixedStart">
    <input type="checkbox" checked id="fixed">
    <label title="" for="fixed" id="fixed"><i class="fa-2x fa fa-plus"> </i></label>
	<div class="fix-buttons">
		@if (userStatus.AuthorizedRoles.Contains(new Guid(SHRoles.SahaGorevPersonel)) || userStatus.AuthorizedRoles.Contains(new Guid(SHRoles.BayiGorevPersoneli)))
		{

			if (Model.isComplete == false && Model.lastOperationStatus != (int)EnumFTM_TaskOperationStatus.CozumBildirildi)
			{
				if (Model.assignableUserIds != null && Model.assignableUserIds.ToLower().IndexOf(userStatus.user.id.ToString()) > -1 && Model.assignUserId == null)
				{
					<a data-task="Insert" data-method="GET" data-modal="true" data-show="single" data-href="@Url.Action("Insert", "VWFTM_TaskOperation" , new { area="FTM" , taskId=Model.id, status=(int)EnumFTM_TaskOperationStatus.GorevUstlenildi })"><i data-toggle="tooltip" title="Görevi Üstlen" class="fa fa-user-secret"></i></a>
				}
				if (Model.assignUserId == userStatus.user.id)
				{
					if (Model.taskOperations.Count(x => x.status == (Int32)EnumFTM_TaskOperationStatus.GorevBaslandi) == 0)
					{
						<a data-task="Insert" data-method="GET" data-modal="true" data-show="single" data-href="@Url.Action("Insert","VWFTM_TaskOperation",new {area="FTM",taskId=Model.id,status=(int)EnumFTM_TaskOperationStatus.GorevBaslandi })"><i data-toggle="tooltip" title="Göreve Başla" class="fa fa-location-arrow"></i> </a>
					}
					else
					{
