@(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.VWSYS_BlockMail>("VWSYS_BlockMail")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWSYS_BlockMail", new { area = "SYS" })).PageSize(25))
    .Columns(x =>
    {
        x.Bound(y => y.id).GridSelector(GridSelectorType.Checkbox);
        x.Bound(y => y.type).Title("type").Width(180);
        x.Bound(y => y.createdby_Title).Title("createdby_Title").Width(180);
        x.Bound(y => y.changedby_Title).Title("changedby_Title").Width(180);
        x.Bound(y => y.userId_Title).Title("userId_Title").Width(180);
        x.Bound(y => y.email).Title("email").Width(180);
    })
    .Selectable(x => x.Mode(GridSelectionMode.Multiple))
    .ToolBar(x =>
    {
        x.Custom().Text("Ekle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "always" }, { "data-method", "GET" } }).Url(Url.Action("Insert", "VWSYS_BlockMail", new { area = "SYS" }));
        x.Custom().Text("Düzenle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "VWSYS_BlockMail", new { area = "SYS" }));
        x.Custom().Text("Detay").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "VWSYS_BlockMail", new { area = "SYS" }));
        x.Custom().Text("Sil").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWSYS_BlockMail", new { area = "SYS" }));
    }))
