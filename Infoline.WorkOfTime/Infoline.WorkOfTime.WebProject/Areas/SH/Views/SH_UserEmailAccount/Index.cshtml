@(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.SH_UserEmailAccount>("SH_UserEmailAccount")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "SH_UserEmailAccount", new { area = "SH" })).PageSize(25))
    .Columns(x =>
    {
        x.Bound(y => y.id).GridSelector(GridSelectorType.Checkbox);
        x.Bound(y => y.email).Title("email").Width(180);
        x.Bound(y => y.password).Title("password").Width(180);
        x.Bound(y => y.mailType).Title("mailType").Width(180);
        x.Bound(y => y.isDefault).Title("isDefault").Width(180);
        x.Bound(y => y.userid).Title("userid").Width(180);
    })
    .Selectable(x => x.Mode(GridSelectionMode.Multiple))
    .ToolBar(x =>
    {
        x.Custom().Text("Ekle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "always" }, { "data-method", "GET" } }).Url(Url.Action("Insert", "SH_UserEmailAccount", new { area = "SH" }));
        x.Custom().Text("Düzenle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "SH_UserEmailAccount", new { area = "SH" }));
        x.Custom().Text("Detay").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "SH_UserEmailAccount", new { area = "SH" }));
        x.Custom().Text("Sil").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "SH_UserEmailAccount", new { area = "SH" }));
    }))
