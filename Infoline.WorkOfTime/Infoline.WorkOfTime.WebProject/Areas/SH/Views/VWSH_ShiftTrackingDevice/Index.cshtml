@{
    ViewBag.Title = "PDKS Cihaz Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.VWSH_ShiftTrackingDevice>("VWSH_ShiftTrackingDevice")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWSH_ShiftTrackingDevice", new { area = "SH" })).PageSize(25))
    .Columns(x =>
    {
        x.Bound(y => y.id).GridSelector(GridSelectorType.Checkbox);
        x.Bound(y => y.DeviceName).Title("Cihaz İsmi").Width(180);
        x.Bound(y => y.DeviceCode).Title("Cihaz Kodu").Width(180);
        x.Bound(y => y.DeviceBrand).Title("Cihaz Markası").Width(180);
        x.Bound(y => y.DeviceModel).Title("Cihaz Modeli").Width(180);
        x.Bound(y => y.DeviceSerialNo).Title("Cihaz Seri Numarası").Width(180);
        x.Bound(y => y.Location).Title("Cihaz Konumu").Width(180);
        x.Bound(y => y.IPAddress).Title("IP Adresi").Width(180);
        x.Bound(y => y.SubnetAddress).Title("Alt Ağ Adresi").Width(180);
        x.Bound(y => y.Gateway).Title("Geçiş Adresi").Width(180);
        x.Bound(y => y.Port).Title("Port").Width(180);
        x.Bound(y => y.MachineNumber).Title("Makine Numrası").Width(180);
    })
    .Selectable(x => x.Mode(GridSelectionMode.Multiple))
    .ToolBar(x =>
    {
        x.Custom().Text("<i class='fa fa-plus-circle' data-original-title='Cihaz Ekle'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "always" }, { "data-method", "GET" } }).Url(Url.Action("Insert", "VWSH_ShiftTrackingDevice", new { area = "SH" }));
        x.Custom().Text("<i class='fa fa-edit' data-original-title='Cihazı Düzenle'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "VWSH_ShiftTrackingDevice", new { area = "SH" }));
        x.Custom().Text("<i class='fa fa-trash' data-original-title='Cihazı Sil'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWSH_ShiftTrackingDevice", new { area = "SH" }));
    }))
