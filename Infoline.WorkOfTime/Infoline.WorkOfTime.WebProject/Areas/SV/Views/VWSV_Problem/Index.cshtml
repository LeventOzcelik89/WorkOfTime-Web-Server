@{
    ViewBag.Title = "Cihaz Problemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.VWSV_Problem>("VWSV_Problem")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWSV_Problem", new { area = "SV" })).PageSize(25))
    .Columns(x =>
    {
     
        x.Bound(y => y.name).Title("Sorun Adı").Width(180);
        x.Bound(y => y.code).Title("Sorun Kodu").Width(180);
        x.Bound(y => y.description).Title("Açıklama").Width(180);
    })
    .Selectable(x => x.Mode(GridSelectionMode.Multiple))
    .ToolBar(x =>
    {
        x.Custom().Text("<i data-original-title='Sorun Ekle' class='fa fa-plus-circle'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "always" }, { "data-method", "GET" } }).Url(Url.Action("Insert", "VWSV_Problem", new { area = "SV" }));
        x.Custom().Text("<i data-original-title='Sorun Düzenle' class='fa fa-edit'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "VWSV_Problem", new { area = "SV" }));
        x.Custom().Text("<i data-original-title='Sorun Detayı' class='fa fa-info-circle'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "VWSV_Problem", new { area = "SV" }));
        x.Custom().Text("<i data-original-title='Sorun Sil' class='fa fa-trash'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWSV_Problem", new { area = "SV" }));
    }))
