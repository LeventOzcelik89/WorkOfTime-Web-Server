@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.VWSV_Customer>("VWSV_Customer")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWSV_Customer", new { area = "SV" })).PageSize(25))
    .Columns(x =>
    {
        x.Bound(y => y.id).GridSelector(GridSelectorType.Checkbox);
        x.Bound(y => y.name).Title("name").Width(180);
        x.Bound(y => y.lastName).Title("lastName").Width(180);
        x.Bound(y => y.phoneNumber).Title("phoneNumber").Width(180);
        x.Bound(y => y.otherPhoneNumber).Title("otherPhoneNumber").Width(180);
        x.Bound(y => y.Address).Title("Address").Width(180);
        x.Bound(y => y.createdby_Title).Title("createdby_Title").Width(180);
        x.Bound(y => y.changedby_Title).Title("changedby_Title").Width(180);
        x.Bound(y => y.openAddressLocationId_Title).Title("openAddressLocationId_Title").Width(180);
    })
    .Selectable(x => x.Mode(GridSelectionMode.Multiple))
    .ToolBar(x =>
    {
        x.Custom().Text("Ekle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "always" }, { "data-method", "GET" } }).Url(Url.Action("Insert", "VWSV_Customer", new { area = "SV" }));
        x.Custom().Text("Düzenle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "VWSV_Customer", new { area = "SV" }));
        x.Custom().Text("Detay").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "VWSV_Customer", new { area = "SV" }));
        x.Custom().Text("Sil").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWSV_Customer", new { area = "SV" }));
    }))
