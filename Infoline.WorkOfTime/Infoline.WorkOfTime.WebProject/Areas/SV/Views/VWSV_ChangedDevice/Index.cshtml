@(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.VWSV_ChangedDevice>("VWSV_ChangedDevice")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWSV_ChangedDevice", new { area = "SV" })).PageSize(25))
    .Columns(x =>
    {
        x.Bound(y => y.id).GridSelector(GridSelectorType.Checkbox);
        x.Bound(y => y.createdby_Title).Title("createdby_Title").Width(180);
        x.Bound(y => y.changedby_Title).Title("changedby_Title").Width(180);
        x.Bound(y => y.oldInventoryCode_Title).Title("oldInventoryCode_Title").Width(180);
        x.Bound(y => y.newInventoryCode_Title).Title("newInventoryCode_Title").Width(180);
        x.Bound(y => y.serialCode).Title("serialCode").Width(180);
        x.Bound(y => y.oldproduct_Title).Title("oldproduct_Title").Width(180);
        x.Bound(y => y.newproduct_Title).Title("newproduct_Title").Width(180);
        x.Bound(y => y.serviceCode).Title("serviceCode").Width(180);
    })
    .Selectable(x => x.Mode(GridSelectionMode.Multiple))
    .ToolBar(x =>
    {
        x.Custom().Text("Ekle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "always" }, { "data-method", "GET" } }).Url(Url.Action("Insert", "VWSV_ChangedDevice", new { area = "SV" }));
        x.Custom().Text("Düzenle").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "VWSV_ChangedDevice", new { area = "SV" }));
        x.Custom().Text("Detay").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "VWSV_ChangedDevice", new { area = "SV" }));
        x.Custom().Text("Sil").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWSV_ChangedDevice", new { area = "SV" }));
    }))
