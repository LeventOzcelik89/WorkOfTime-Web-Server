    li {
        list-style: none;
    }

    .table-text {
        width: 100px;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    #detailProduction .main-timeline2 .timeline2 {
        width: 16.6666% !important;
    }

    .tab-pane {
        padding: 0px !important;
    }

    #left .animated {
        -webkit-animation-duration: 1s;
        animation-duration: 5s !important;
        -webkit-animation-fill-mode: both;
