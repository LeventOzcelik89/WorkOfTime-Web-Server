        z-index: 100;
    }
    .table-mine{
        width:100%;
        align-content:center;
        height:90px;

    }
    .table-mine >tbody{
        width:90%;
       
    }
    
    .table-mine >tbody >tr>td{
        padding:2px;
        
    }
    .table-mine >tbody>tr>td:first-child{
        text-align:left;
        margin-right:25px;
    }
        .table-mine > tbody > tr > td:last-child {
            font-weight:bold;
            text-align:right;
            float:right;
        }
