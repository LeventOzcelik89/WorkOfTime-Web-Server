@model Infoline.WorkOfTime.BusinessData.VWINV_CompanyPersonCalendar
@{
    ViewBag.Title = "Bildirim Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-horizontal" data-selector="modalContainer">

    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="Type_Title">Bildirim Tipi</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Type_Title, new Dictionary<string, object>() 
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="Title">Başlık</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Title, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="StartDate">Başlangıç Tarihi</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.StartDate, new Dictionary<string, object>() 
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="EndDate">Bitiş Tarihi</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.EndDate, new Dictionary<string, object>() 
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="PersonCount">Personel Sayısı</label>
        </div>
        <div class="col-md-8">
            @Html.TextBox("PersonCount", Model.PersonCount != null ? Model.PersonCount + " Personel" : "", new Dictionary<string, object>() 
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="Description">Açıklama</label>
        </div>
        <div class="col-md-8">
            @Html.TextAreaFor(model => model.Description, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="buttons">
        <button class="btn btn-md btn-danger pull-left" data-task="modalClose">Geri</button>
    </div>

</div>
