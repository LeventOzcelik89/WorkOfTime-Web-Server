@{
    ViewBag.Title = "Birim Tanımları";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var card = (UT_UnitCard)ViewBag.Card;

}





<div class="ibox ">
    <div class="ibox-title">
        <h5>Birim Listesi</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">



        @(Html.Akilli()
            .Grid<Infoline.WorkOfTime.BusinessData.UT_Unit>("UT_Unit")
            .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "UT_Unit", new { area = "UT" })).PageSize(25))
            .Columns(x =>
            {
                x.Bound(y => y.name).Title("İsmi");
            })
            .Selectable(x => x.Mode(GridSelectionMode.Single))
            .Scrollable(a => a.Height(650))
            .ToolBar(x =>
            {
                x.Custom().Text("BİRİM EKLE").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "always" }, { "data-method", "GET" } }).Url(Url.Action("Insert", "UT_Unit", new { area = "UT" }));
                x.Custom().Text("DÜZENLE").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "UT_Unit", new { area = "UT" }));
                x.Custom().Text("BİRİM SİL").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "UT_Unit", new { area = "UT" }));
            }))


    </div>
</div>







