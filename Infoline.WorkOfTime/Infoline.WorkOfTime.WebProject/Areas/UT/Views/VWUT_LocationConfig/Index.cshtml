@{
    ViewBag.Title = "Konum Takip Yapılandırmaları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.VWUT_LocationConfig>("VWUT_LocationConfig")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWUT_LocationConfig", new { area = "UT" })).PageSize(25))
    .Columns(x =>
    {
        x.Bound(y => y.configName).Title("Konum Takibi Yapılandırması").Width(180);
        x.Bound(y => y.shiftStart).Title("Mesai Başlangıç").Width(180);
        x.Bound(y => y.shiftEnd).Title("Mesai Bitiş").Width(180);
        x.Bound(y => y.dataSendingCount).Title("Merkeze kaç Defa Konum Bilgisi İletilsin(Adet)").Width(180);
        x.Bound(y => y.workDays_Title).Title("Çalışma Günü").Width(180);
    })
    .Selectable(x => x.Mode(GridSelectionMode.Multiple)).Scrollable(c => c.Height(650))
    .ToolBar(x =>
    {
        x.Custom().Text("<i data-original-title='Yapılandırma Detayı' class='fa fa-info-circle'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" }}).Url(Url.Action("Detail", "VWUT_LocationConfig", new { area = "UT" }));
        x.Custom().Text("<i class='fa fa-plus-circle' data-original-title='Yeni Yapılandırma Ekle'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "always" }, { "data-method", "GET" } }).Url(Url.Action("Insert", "VWUT_LocationConfig", new { area = "UT" }));
        x.Custom().Text("<i class='fa fa-edit' data-original-title='Yapılandırmayı Düzenle'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "VWUT_LocationConfig", new { area = "UT" }));
        x.Custom().Text("<i class='fa fa-trash' data-original-title='Yapılandırmayı Sil'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWUT_LocationConfig", new { area = "UT" }));
    }))
