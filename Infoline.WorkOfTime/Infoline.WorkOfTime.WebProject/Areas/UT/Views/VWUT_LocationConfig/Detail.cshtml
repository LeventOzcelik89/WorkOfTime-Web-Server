@model Infoline.WorkOfTime.BusinessData.VWUT_LocationConfig
@{
    ViewBag.Title = "Kayıt Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-horizontal" data-selector="modalContainer">
    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md req" for="configName">Yapılandırma Adı</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.configName, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md req" for="shiftStart">Mesai Başlangıç</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.shiftStart, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md req" for="shiftEnd">Mesai Bitiş</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.shiftEnd, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md req" for="dataSendingCount">Kaç Dakikada Veri Alınsın</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.dataSendingCount, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md req" for="workDays">Çalışma Günü</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.workDays, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="buttons">
        <button class="btn btn-md btn-danger pull-left" data-task="modalClose">Geri</button>
    </div>

</div>
