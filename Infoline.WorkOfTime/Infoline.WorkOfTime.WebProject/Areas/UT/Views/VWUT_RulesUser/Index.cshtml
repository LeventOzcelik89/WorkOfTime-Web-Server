@{
    ViewBag.Title = "Kullanıcı Kuralları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
     <div class="col-md-2">
         <div class="ibox">
             <div class="ibox-content mailbox-content">
                 <div class="file-manager">
                     <a class="btn btn-block btn-success" data-task="Insert" data-href="/UT/VWUT_RulesUser/Insert" data-modal="true" data-method="get">
                         <i class="fa fa-plus-circle"></i> Kullanıcı Kuralları Oluştur
                     </a>
                 </div>
             </div>
         </div>
     </div>
     <div class="col-md-10">
         <div class="ibox">
             <div class="ibox-title">
                 <h5>Kullanıcı Kuralları</h5>
                 <div class="ibox-tools">
                     <a class="collapse-link">
                         <i class="fa fa-chevron-up"></i>
                     </a>
                 </div>
             </div>
             <div class="ibox-content">
@(Html.Akilli()
    .Grid<Infoline.WorkOfTime.BusinessData.VWUT_RulesUser>("VWUT_RulesUser")
    .DataSource(x => x.Ajax().Read(r => r.Action("DataSource", "VWUT_RulesUser", new { area = "UT" })).PageSize(25))
    .Columns(x =>
    {

        x.Bound(y => y.rulesId_Title).Title("Kural Adı").Width(130);
        x.Bound(y => y.userId_Title).Title("Kullanıcı Adı").Width(130);
    })
    .Scrollable(x => x.Height(650))
    .Selectable(x => x.Mode(GridSelectionMode.Single))
    .ToolBar(x =>
    {
        x.Custom().Text("<i data-original-title='Kullanıcı Kuralları Düzenle' class='fa fa-edit'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-method", "GET" } }).Url(Url.Action("Update", "VWUT_RulesUser", new { area = "UT" }));
        x.Custom().Text("<i data-original-title='Kullanıcı Kuralları Detayı' class='fa fa-info-circle'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-show", "single" }, { "data-default", "" } }).Url(Url.Action("Detail", "VWUT_RulesUser", new { area = "UT" }));
        x.Custom().Text("<i data-original-title='Kullanıcı Kuralları Sil' class='fa fa-trash'></i>").HtmlAttributes(new Dictionary<string, object>() { { "data-ask", "" } }).Url(Url.Action("Delete", "VWUT_RulesUser", new { area = "UT" }));
    }))
             </div>
         </div>
     </div>
</div>
