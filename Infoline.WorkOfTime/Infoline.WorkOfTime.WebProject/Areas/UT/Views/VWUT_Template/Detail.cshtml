                editor.on('change', function () { $("#template").val(new Option(editor2.getData()).innerHTML); });

            </script>
        </div>
    </div>



    <div class="buttons">
        <button class="btn btn-md btn-danger pull-left" data-task="modalClose">Geri</button>
    </div>

</div>

