@model Infoline.WorkOfTime.BusinessData.VWUT_Template
@{
    ViewBag.Title = "Şablon Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/Plugins/ckeditor/ckeditor.js" data-selector="modalContainer"></script>
<style type="text/css" data-selector="modalContainer">
    .modal-dialog {
        width: 80% !important;
    }
</style>
<div class="form-horizontal" data-selector="modalContainer">

    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="code">Şablon Kodu</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.code, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="title">Şablon Başlığı</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.title, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="type_Title">Şablon Tipi</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.type_Title, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="status_Title">Statüs</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.status_Title, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"readonly", "readonly"}
            })
        </div>
    </div>



    <div class="form-group" style="padding:16px;">
        <div class="col-12">
            <label for="content" class="req" style="text-transform:uppercase;font-weight:bold;font-size:12px;color:rgb(0 0 0 / 70%);">Şablon İçeriği</label>
        </div>
        <div class="col-12">
            @Html.HiddenFor(a => a.template)
            @Html.TextArea("templateHTMLFakeElement", HttpUtility.HtmlDecode(Model.template), new Dictionary<string, object>() {
                {"disabled","disabled"}
            })
            <script type="text/javascript">
                var editor = CKEDITOR.replace('templateHTMLFakeElement', {
                    language: 'tr',
                    height: 320,
                    removeButtons: 'Save',
