@using Infoline.WorkOfTime.BusinessAccess
@{
    ViewBag.Title = "Hoş Geldiniz ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Plugins/fabricjs/fabric.js"></script>
<style type="text/css">
    .wrapper.wrapper-content {
        padding: 0px !important;
    }

    div#page-wrapper {
        padding: 0px;
    }

    .row.white-bg.page-heading {
        padding: 0px 15px;
    }
</style>

<script type="text/javascript">

    var page = {
        canvas: null,

        init: function () {

            var $this = this;

            $this.canvas = new fabric.Canvas('cnv', { selection: false });
            fabric.Object.prototype.originX = fabric.Object.prototype.originY = 'center';

            function makeCircle(left, top, line1, line2, line3, line4) {

                var c = new fabric.Circle({
                    left: left,
                    top: top,
                    strokeWidth: 5,
                    radius: 12,
                    fill: '#fff',
                    stroke: '#666',
                    hasControls: false,
                    hasBorders: false,
                });

                c.line1 = line1;
                c.line2 = line2;
                c.line3 = line3;
                c.line4 = line4;

                return c;

            }

            function makeLine(coords) {
                return new fabric.Line(coords, {
                    fill: 'red',
                    stroke: 'red',
                    strokeWidth: 5,
                    selectable: false,
                    evented: false,
                });
            }

            var line = makeLine([250, 125, 250, 175]),
                line2 = makeLine([250, 175, 250, 250]),
                line3 = makeLine([250, 250, 300, 350]),
                line4 = makeLine([250, 250, 200, 350]),
                line5 = makeLine([250, 175, 175, 225]),
                line6 = makeLine([250, 175, 325, 225]);

            $this.canvas.add(line, line2, line3, line4, line5, line6);

            $this.canvas.add(
                makeCircle(line.get('x1'), line.get('y1'), null, line),
                makeCircle(line.get('x2'), line.get('y2'), line, line2, line5, line6),
                makeCircle(line2.get('x2'), line2.get('y2'), line2, line3, line4),
                makeCircle(line3.get('x2'), line3.get('y2'), line3),
                makeCircle(line4.get('x2'), line4.get('y2'), line4),
                makeCircle(line5.get('x2'), line5.get('y2'), line5),
                makeCircle(line6.get('x2'), line6.get('y2'), line6)
            );

            $this.canvas.on('object:moving', function (e) {
                var p = e.target;
                p.line1 && p.line1.set({ 'x2': p.left, 'y2': p.top });
                p.line2 && p.line2.set({ 'x1': p.left, 'y1': p.top });
                p.line3 && p.line3.set({ 'x1': p.left, 'y1': p.top });
                p.line4 && p.line4.set({ 'x1': p.left, 'y1': p.top });
                $this.canvas.renderAll();
            });


            var obj = {
                type: 'if',
                backgroundColor: '#f97f96',
                borderColor: '#666666',
                //  sadece ilk ınput için koyulabilir.
                //  evented: false
                //  selectable: false

                left: 'x',
                top: 'y',

                //  width: 100,


                fill: '#ff0000',

            };


            $this.canvas.on('mouse:dblclick', function (evnt) {

                fabric.Image.fromURL('/content/Plugins/fabricjs/SVG/009-pen.svg', function (image) {

                    image.set({
                        left: evnt.pointer.x,
                        top: evnt.pointer.y,
                        hasControls: false,
                        hasBorders: false,
                    });

                    image.scaleToWidth(24);
                    image.scaleToHeight(24);

                    $this.canvas.add(image);

                });

            });

        }

    };

    $(document)

        .on('ready', function () {

            page.init();

        })

        ;

</script>

<canvas id="cnv" width="1850" height="924"></canvas>


<div id="capture" style="padding: 10px; background: #f5da55">
    <h4 style="color: #000; ">Hello world!</h4>
</div>
